{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "styles": {
        "elements": {
            "button": {
                ":hover": {
                    "color": {
                        "background": "color-mix(in srgb, var(--wp--preset--color--theme-6) 90%, var(--wp--preset--color--theme-1) 10%)"
                    }
                },
                "border": {
                    "radius": "var(--wp--custom--border--radius--button)"
                },
                "color": {
                    "background": "var(--wp--preset--color--theme-6)",
                    "text": "var(--wp--preset--color--theme-1)"
                },
                "spacing": {
                    "padding": {
                        "bottom": "6px",
                        "left": "16px",
                        "right": "16px",
                        "top": "7px"
                    }
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "fontWeight": "500",
                    "lineHeight": "1.9"
                }
            },
            "caption": {
                "color": {
                    "text": "var(--wp--preset--color--theme-5)"
                },
                "spacing": {
                    "margin": {
                        "bottom": "0 !important",
                        "top": "var(--wp--preset--spacing--10) !important"
                    },
                    "padding": {
                        "left": "var(--wp--preset--spacing--20)",
                        "right": "var(--wp--preset--spacing--20)"
                    }
                },
                "typography": {
                    "textAlign": "center",
                    "fontSize": "90%"
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xx-large)"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "90%"
                }
            },
            "h6": {
                "color": {
                    "text": "var(--wp--preset--color--theme-5)"
                },
                "typography": {
                    "fontSize": "90%",
                    "fontWeight": "normal"
                }
            },
            "heading": {
                "color": {
                    "text": "var(--wp--preset--color--theme-6)"
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "550",
                    "lineHeight": "1.45"
                }
            },
            "link": {
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--accent-2)"
                    },
                    "typography": {
                        "textDecoration": "none"
                    }
                },
                "color": {
                    "text": "var(--wp--preset--color--accent-1)"
                },
                "typography": {
                    "textDecoration": "none"
                },
                "css": "transition: color calc(var(--wp--custom--transition--duration) * 0.5) ease-out"
            }
        }
    }
} 